<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="libs\meowth\meowth.lua" />
	<Script file="PayDay.lua" />
	<Frame name="PayDayFrame" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="false" clampedToScreen="true">
		<Size>
			<AbsDimension x="200" y="136" />
		</Size>
		<TitleRegion>
			<Size x="180" y="20"/>
			<Anchors>
				<Anchor point="TOP"/>
			</Anchors>
		</TitleRegion>
		<Anchors>
			<Anchor point="RIGHT"/>  <!-- this is the frame's start out location -->
		</Anchors>
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="16" />
			</EdgeSize>
		</Backdrop>
		<Frames>
			<EditBox name="$parentEditBoxMaxRoll" inherits="InputBoxTemplate" autoFocus="false" letters="8" text="100" numeric="true">
				<Size x="80" y="26"/>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="16" y="-17"/>
					</Anchor>
				</Anchors>
			</EditBox>
			<EditBox name="$parentEditBoxMinRoll" inherits="InputBoxTemplate" autoFocus="false" letters="8" text="1" numeric="true">
				<Size x="80" y="26"/>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="106" y="-17"/>
					</Anchor>
				</Anchors>
			</EditBox>
			<Button name="$parentButtonStartMatch" text="Start Match" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="88" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="10" y="-44" />
					</Anchor>
				</Anchors>
			</Button>
			<Frame name="PayDayFrameDropDownChannel" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="84" y="-40"/>
					</Anchor>
				</Anchors>
			</Frame>
			<Button name="$parentButtonStartRoll" text="Start Roll" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="88" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="10" y="-70" />
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentButtonEndMatch" text="End Match" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="88" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="100" y="-70" />
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentButtonPrintStats" text="Print Stats" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="88" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="10" y="-94" />
					</Anchor>
				</Anchors>
			</Button>
			<Button name="$parentButtonResetStats" text="Reset Stats" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="88" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="100" y="-94" />
					</Anchor>
				</Anchors>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				PayDay_OnLoad(self);
				PayDayFrame_OnLoad(self);
			</OnLoad>
			<OnUpdate>
				PayDayFrame_OnUpdate(self);
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
