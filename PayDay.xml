						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentLeft" file="Interface\ChatFrame\ChatFrameTab">
							<Size x="16" y="24"/> <!-- Don't change these or the artwork will look bad -->
